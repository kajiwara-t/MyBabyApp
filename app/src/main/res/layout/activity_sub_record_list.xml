<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp">

    <!--子供の名前表示用-->
    <TextView
        android:id ="@+id/babyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <!--測定した日テキスト-->
        <TextView
            android:id="@+id/setTextNowYMD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="測定日"
            android:textSize="14sp" />

    <!--測定した年-->
        <TextView
            android:id="@+id/setTextNowYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="14sp" />

        <!--〇〇〇〇年表示-->
        <TextView
            android:id="@+id/TextNowYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="14sp"
            android:text="年"
            />


    <!--測定した月-->
        <TextView
            android:id="@+id/setTextNowMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="14sp" />

        <!--〇〇月表示-->
        <TextView
            android:id="@+id/TextNowMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="14sp"
            android:text="月"
            />

    <!--測定した日-->
        <TextView
            android:id="@+id/setTextNowDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="14sp" />

        <!--○○日表示-->
        <TextView
            android:id="@+id/TextNowDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="14sp"
            android:text="日"
            />

    </LinearLayout>
</LinearLayout>